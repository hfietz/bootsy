{# overrides the equivalent file in FOSUserBundle, included from @FOSUserBundle:Resources:views:Profile:edit.html.twig #}
{% trans_default_domain 'bootsy_user' %}
{% form_theme form 'EconemonBootsyApplicationBundle:Form:theme_default.html.twig' %}

<h2>{{ 'layout.profile.headline'|trans({ '%full_name%': app.user.name }) }}</h2> {# (this assumes an instance of Econemon\Bootsy\UserBundle\Entity\User #}
<form action="{{ path('econemon_bootsy_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
    <div class="form-errors">{{ form_errors(form) }}</div>
    {{ form_row(form.username) }}
    {{ form_row(form.name) }}
    {{ form_row(form.phone) }}
    <div>
        <input type="submit" name="submit-save" value="{{ 'layout.profile.save'|trans }}" />
    </div>
    <fieldset>
        <legend>{{ 'layout.profile.section.password'|trans }}</legend>
        {{ form_row(form.current_password, { 'row_class': 'form_row_top_label' }) }}
        {{ form_row(form.plainPassword, { 'row_class': 'form_row_top_label' }) }}
        <div>
            <input type="submit" name="submit-password" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" />
        </div>
    </fieldset>
    <fieldset>
        <legend>{{ 'layout.profile.section.email'|trans }}</legend>
        {{ form_row(form.newEmail, { 'row_class': 'form_row_top_label' }) }}
        <div>
            <input type="submit" name="submit-email" value="{{ 'form.user.submit.newEmail'|trans }}" />
        </div>
    </fieldset>
    {{ form_widget(form._token) }}
</form>

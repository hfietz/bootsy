{% extends 'EconemonBootsyApplicationBundle:Main:main.html.twig' %}
{% trans_default_domain 'bootsy_user' %}
{% form_theme form 'EconemonBootsyApplicationBundle:Form:theme_default.html.twig' %}

{% block heading %}{{ 'layout.registration.headline'|trans }}{% endblock heading %}
{% block content %}
    <form action="{{ path('econemon_bootsy_user_new') }}" method="post" {{ form_enctype(form) }}>
        <div class="form-errors">{{ form_errors(form) }}</div>
        {{ form_row(form.role) }}
        {{ form_row(form.email, { 'row_class': 'form-row-top-label' }) }}
        <p class="explanation">{{ 'layout.registration.explanation'|trans }}</p>
        <div>
            <input type="submit" name="submit" value="{{ 'registration.form.submit'|trans }}" />
        </div>
        {{ form_rest(form) }}
    </form>
{% endblock content %}

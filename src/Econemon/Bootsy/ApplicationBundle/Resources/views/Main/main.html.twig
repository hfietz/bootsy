{% extends 'EconemonBootsyApplicationBundle:Main:html5-default.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('css/reset.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('css/layout.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('css/looknfeel.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
{% block body %}
    {% block session %}
        <div id="session-status">{% spaceless %}
        {% if session is defined %}
            {{ render(controller('EconemonBootsySecurityBundle:Session:status')) }}
        {% else %}
            <a href="{{ path('fos_user_security_login') }}">Login</a>
        {% endif %}
        </div>{% endspaceless %}
    {% endblock %}
    {% block logo %}
        <div id="logo">
            {% if logo is defined %}
                {% if logo.image is defined %}
                    <img src="{{ asset(logo.image.src) }}" class="logo">
                {% endif %}
                {% if logo.headline is defined %}
                    <h1>{{ logo.headline }}</h1>
                {% endif %}
            {% endif %}
        </div>
    {% endblock %}
    <div id="frame">{% block frame %}
            {% block navigation %}
                {% if menu is defined and menu %}
                    <ul id="main-navi" class="menu">
                        {% for item in menu %}{% spaceless %}
                            <li class="level-{{ item.level }}">
                                {% if item.target %}<a href="{{ path(item.target) }}">{{ item.label }}</a> {% else %}{{ item.label }}{% endif %}
                                {% if item.children %}
                                    <ul class="submenu">
                                        {% for subitem in item.children %}
                                            <li class="level-{{ subitem.level }}">
                                                {% if subitem.target %}<a href="{{ path(subitem.target) }}">{{ subitem.label }}</a> {% else %}{{ subitem.label }}{% endif %}
                                            </li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                            </li>
                        {% endspaceless %}{% endfor %}
                    </ul>
                {% endif %}
            {% endblock %}
            <div id="content">
                {% block content %}
                {% endblock %}
            </div>
        {% endblock %}</div>
    <div id="footer">
        {% block footer %}{% endblock %}
    </div>
{% endblock %}
{% block javascripts %}
{% endblock %}

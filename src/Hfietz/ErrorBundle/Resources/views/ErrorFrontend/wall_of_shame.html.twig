{% extends '::base.html.twig' %}

{% block content %}
    <h1>Wall Of Shame</h1>
    {% if list is defined and list %}
        <table>
            <thead>
                <tr><th>Message</th><th>Location</th><th>Last Occurrence</th><th>Number of Occurrences</th></tr>
            </thead>
            <tbody>
            {% for error in list %}
                <tr><td>{{ error.message }}</td><td>{{ error.file }}:{{ error.line }}</td><td>{{ error.timestamp }}</td><td>{{ error.count }}</td></tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>There are no errors to be displayed</p>
    {% endif %}
{% endblock %}